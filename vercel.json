{
    "version": 2,
    "builds": [
      {
        "src": "src/main/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "src/build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
      }
    ],
    "routes": [
      {
        "src": "/src/static/(.*)",
        "dest": "src/static/$1"
      },
      {
        "src": "arc/(.*)",
        "dest": "src/main/wsgi.py"
      }
    ]
  }